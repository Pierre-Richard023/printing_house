{% extends 'admin/dashboard.html.twig' %}

{% block title %}
	Listes des types de courier
{% endblock %}

{% block body %}

	<div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 relative">
		<h3 class="text-xl leading-none font-bold text-gray-900 mb-10">Listes des type de courier</h3>

		<div class="absolute top-0 right-0 p-6">
			<a class="bg-primary text-white px-8 py-3 font-semibold rounded-full" href="{{ path('admin.mailtype.new') }}">Ajouter un type de courier</a>
		</div>

		<div class="block w-full overflow-x-auto">

			<table class="min-w-full border-collapse border-spacing-y-2 border-spacing-x-2">
				<thead class="hidden border-b lg:table-header-group">
					<tr class="">
						<td class="whitespace-normal py-4 text-sm font-semibold text-gray-800 sm:px-3">
							Nom
						</td>
						<td class="whitespace-normal py-4 text-sm font-medium text-gray-500 sm:px-3">
							Prix
						</td>
						<td class="whitespace-normal py-4 text-sm font-medium text-gray-500 sm:px-3">
							Actions
						</td>
					</tr>
				</thead>

				<tbody class="bg-white lg:border-gray-300">

					{% for mailType in mailTypes %}
						<tr class="">
							<td class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">
								{{ mailType.name }}
							</td>
							<td class="whitespace-no-wrap hidden py-4 text-left text-sm text-gray-600 sm:px-3 lg:table-cell lg:text-left">
								{{ mailType.price }}
								â‚¬
							</td>
							<td class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-500 sm:px-3 lg:table-cell">
								<div class="flex flex-wrap gap-4">
									<a class="text-success" href="{{ path('admin.mailtype.show', {'id': mailType.id}) }}">
										<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
											<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/>
											<path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
										</svg>
									</a>
									<a class="text-secondary" href="{{ path('admin.mailtype.edit', {'id': mailType.id}) }}">
										<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
											<path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10"/>
										</svg>
									</a>
								</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>


{% endblock %}
