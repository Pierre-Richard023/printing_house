<div class="flex gap-2">

	<a class="text-primary" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Visualiser la commande" href="{{ path('admin.orders.show', {'id': order.id}) }}">
		<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
			<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/>
			<path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
		</svg>

	</a>

	{% if order.status  == 1 %}

		{% if order.state  == 1 %}
			<a class="text-secondary" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Valider l'envoi de la commande " href=" {{ path('admin.orders.approveDelivery', {'id': order.id, '_token': csrf_token('order' ~ order.id) } ) }} ">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"/>
				</svg>
			</a>
		{% elseif order.state == 2 %}
			<a class="text-secondary" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Valider la reception de la commande " href=" {{ path('admin.orders.validDelivery', {'id': order.id, '_token': csrf_token('order' ~ order.id) } ) }} ">
				<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/>
				</svg>
			</a>
		{% endif %}

	{% endif %}

</div>
