{% extends 'admin/dashboard.html.twig' %}

{% block title %}
	Utilisateur
	{{ user.lastname }}
	{{ user.firstname }}
{% endblock %}

{% block body %}
	<div class="relative w-full h-16 ">
		<div class="absolute top-0 left-0 p-6">
			<a class="bg-secondary text-white px-8 py-3 font-semibold rounded-full" href="{{ path('admin.user.index') }}">Retour</a>
		</div>
	</div>
	<div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8 relative">
		<h3 class="text-xl leading-none font-bold text-gray-900 mb-10">Détails d'un utilisateur :
		</h3>


		<div class="block w-full md:w-1/2 text-left  overflow-x-auto">

			<table class="min-w-full border-collapse border-spacing-y-2 border-spacing-x-2">
				<tbody class="bg-white lg:border-gray-300">
					<tr class="">
						<th class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">
							Email
						</th>
						<td class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">
							{{ user.email }}
						</td>
					</tr>
					<tr>
						<th class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">Roles</th>
						<td class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">
							{% for role in user.roles %}
								{% if role == "ROLE_USER" %}
									<span class="ml-2 mr-3 whitespace-nowrap rounded-full bg-purple-100 px-2 py-0.5 text-purple-800">
										Utilisateur</span>
								{% elseif role == "ROLE_ADMIN" %}
									<span class="ml-2 mr-3 whitespace-nowrap rounded-full bg-purple-100 px-2 py-0.5 text-purple-800">
										Administrateur</span>
								{% endif %}
							{% endfor %}
						</td>
					</tr>
					<tr>
						<th class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">Nom</th>
						<td class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">{{ user.lastname }}</td>
					</tr>
					<tr>
						<th class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">Prénom</th>
						<td class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">{{ user.firstname }}</td>
					</tr>
					<tr>
						<th class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">Inscrit depuis</th>
						<td class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">{{ user.registeredSince ? user.registeredSince|date('Y-m-d H:i:s') : '' }}</td>
					</tr>
					<tr>
						<th class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">Dernière Connexion</th>
						<td class="whitespace-no-wrap hidden py-4 text-sm font-normal text-gray-600 sm:px-3 lg:table-cell">{{ user.lastConnection ? user.lastConnection|date('Y-m-d H:i:s') : 'Aucune connexion' }}</td>
					</tr>

				</tbody>
			</table>

		</div>

	</div>
{% endblock %}
